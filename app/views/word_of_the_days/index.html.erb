<h1>Word Of The Days</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @word_of_the_days.each do |word_of_the_day| %>
      <tr>
        <td><%= link_to 'Show', word_of_the_day %></td>
